<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/style.css">

    <title>my product</title>

</head>
<body>
    <header>
      
        <a href="/">HOME</a>
        <a href="/myProduct">MY CARD</a>
    </header>

    <main>

        <section class="card">
        <% favProducts.forEach(element => { %>

            <h2><%= element.name  %> </h2>
            <h3><%= element.price  %></h3>
            <img src="<%= element.image_link  %>" alt="">
            <p><%= element.description  %></p>
            <a href="/productDetails/<%= element.id %>">view details</a>
            
            <% }); %> 

        </section>


    </main>
</body>
</html>